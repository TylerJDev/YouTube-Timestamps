{
  "name": "YouTube Timestamps",
  "version": "1.0.0",
  "description": "YouTube Timestamps is a plugin to track timestamps on any video which contains them.",
  "permissions": ["*://*.youtube.com/*", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/handleYoutube.js"],
      "css": ["css/yt_timestamps.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "html/interface.html"
  },
  "manifest_version": 2,
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
